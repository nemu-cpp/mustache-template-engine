ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/tests/include/Ishiko/Tests.bkl;
nemupath = envvar("NEMU_CPP");
import $(nemupath)/mustache-templating-engine/include/Nemu/MustacheTemplatingEngine.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/NemuMustacheTemplatingEngineTests.sln;
vs2017.solutionfile = ../vc15/NemuMustacheTemplatingEngineTests.sln;
vs2015.solutionfile = ../vc14/NemuMustacheTemplatingEngineTests.sln;
vs2013.solutionfile = ../vc12/NemuMustacheTemplatingEngineTests.sln;

program NemuMustacheTemplatingEngineTests : NemuMustacheTemplatingEngine, IshikoTests
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += NemuMustacheTemplatingEngine IshikoTests IshikoTestsCore IshikoProcess boost_program_options boost_filesystem ;
    }

    headers
    {
        ../../src/MustacheTemplatingEngineTests.hpp
    }

    sources
    {
        ../../src/main.cpp
        ../../src/MustacheTemplatingEngineTests.cpp
    }
}
